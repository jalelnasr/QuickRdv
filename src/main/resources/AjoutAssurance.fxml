<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="627.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AjoutAssurance">
    <children>
        <Text layoutX="18.0" layoutY="42.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Ajouter une Assurance" wrappingWidth="270.0">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <Label layoutX="19.0" layoutY="70.0" text="Nom:" />
        <TextField fx:id="nomField" layoutX="235.0" layoutY="70.0" prefHeight="26.0" prefWidth="150.0" promptText="Nom de l'assurance" />

        <Label layoutX="19.0" layoutY="110.0" text="Type:" />
        <ComboBox fx:id="typeComboBox" layoutX="235.0" layoutY="110.0" prefHeight="26.0" prefWidth="150.0" promptText="Type d'assurance">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Privée" />
                    <String fx:value="Etatique" />
                </FXCollections>
            </items>
        </ComboBox>

        <Label layoutX="19.0" layoutY="150.0" text="Date Début:" />
        <DatePicker fx:id="dateDebutPicker" layoutX="235.0" layoutY="150.0" prefHeight="26.0" prefWidth="150.0" />

        <Label layoutX="19.0" layoutY="190.0" text="Date Fin:" />
        <DatePicker fx:id="dateFinPicker" layoutX="235.0" layoutY="190.0" prefHeight="26.0" prefWidth="150.0" />

        <Label layoutX="19.0" layoutY="230.0" text="Montant Couvert:" />
        <TextField fx:id="montantField" layoutX="235.0" layoutY="230.0" prefHeight="26.0" prefWidth="150.0" promptText="Montant couvert" />

        <Button layoutX="498.0" layoutY="270.0" mnemonicParsing="false" onAction="#SaveAssurance" text="Enregistrer" />

        <!-- Update Button -->
        <Button layoutX="235.0" layoutY="270.0" mnemonicParsing="false" onAction="#UpdateAssurance" text="Mettre à jour" />

        <!-- Delete Button -->
        <Button layoutX="360.0" layoutY="270.0" mnemonicParsing="false" onAction="#DeleteAssurance" text="Supprimer" />

        <!-- TableView to display assurances -->
        <TableView fx:id="assuranceTable" layoutX="19.0" layoutY="310.0" prefHeight="200.0" prefWidth="760.0">
            <columns>
                <TableColumn fx:id="colNom" prefWidth="150.0" text="Nom" />
                <TableColumn fx:id="colType" prefWidth="150.0" text="Type" />
                <TableColumn fx:id="colDateDebut" prefWidth="150.0" text="Date Début" />
                <TableColumn fx:id="colDateFin" prefWidth="150.0" text="Date Fin" />
                <TableColumn fx:id="colMontant" prefWidth="150.0" text="Montant Couvert" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
