<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.Chatbot"
      spacing="10"
      style="-fx-padding: 10;">
    <TextArea fx:id="chatArea" editable="false" wrapText="true" style="-fx-font-size: 14;"/>
    <TextField fx:id="messageField" promptText="Type your message here..." onAction="#sendMessage" style="-fx-font-size: 14;"/>
    <Button fx:id="sendButton" text="Send" onAction="#sendMessage" style="-fx-font-size: 14;"/>
</VBox>